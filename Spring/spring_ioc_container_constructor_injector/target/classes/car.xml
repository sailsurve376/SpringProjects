<?xml version="1.0" encoding="UTF-8"?>
<beans     xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd">
         <bean id="myengine" class="com.tcs.spring_ioc_container_constructor_injector.Engine">
        <constructor-arg name="engineNo" value="3224"></constructor-arg>
        <constructor-arg name="cc" value="150"></constructor-arg>
        
        </bean>  
        <bean id="mycar" class="com.tcs.spring_ioc_container_constructor_injector.Car">
        <constructor-arg name="brand" value="BMW"></constructor-arg>
        <constructor-arg name="price" value="50000.00"></constructor-arg>
        <constructor-arg name="engine" ref="myengine"></constructor-arg>
        </bean>  
    

</beans> 
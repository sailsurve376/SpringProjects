<?xml version="1.0" encoding="UTF-8"?>
<beans     xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd">
         <bean id="skill1" class="com.tcs.spring_ioc_container_constructor_injector.Skills">
         <constructor-arg name="id" value="101"></constructor-arg>
         <constructor-arg name="name" value="Java"></constructor-arg>
         </bean>
          <bean id="skill2" class="com.tcs.spring_ioc_container_constructor_injector.Skills">
         <constructor-arg name="id" value="102"></constructor-arg>
         <constructor-arg name="name" value="Python"></constructor-arg>
         </bean>
        <bean id="mystudent" class="com.tcs.spring_ioc_container_constructor_injector.Student">
        <constructor-arg name="id" value="1"></constructor-arg>
        <constructor-arg name="name" value="Sail"></constructor-arg>
        <constructor-arg>
        <list>
        	<ref bean="skill1"/>
        	<ref bean="skill2"/>
        </list></constructor-arg>
        </bean>  
    

</beans> 
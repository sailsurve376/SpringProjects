<?xml version="1.0" encoding="UTF-8"?>
<beans     xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd">
        <bean id="mypen" class="com.tcs.spring_ioc_container_constructor_injector.Pen">
        <constructor-arg name="brand" value="Reynolds"></constructor-arg>
        <constructor-arg name="color" value="blue"></constructor-arg>
        <constructor-arg name="price" value="20"></constructor-arg>
        </bean>  
    

</beans> 